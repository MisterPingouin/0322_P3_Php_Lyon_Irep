{% extends 'base.html.twig' %}

{% block title %}Exhibition{% endblock %}

{% block body %}
    <h1>Exhibition</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ exhibition.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ exhibition.name }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ exhibition.start ? exhibition.start|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ exhibition.end ? exhibition.end|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_exhibition_index') }}">back to list</a>

    <a href="{{ path('app_exhibition_edit', {'id': exhibition.id}) }}">edit</a>

