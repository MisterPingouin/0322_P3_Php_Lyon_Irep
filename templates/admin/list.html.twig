{% extends 'base.html.twig' %}

{% block title %}Liste Exposition{% endblock %}

{% block body %}
<div class="bg-backgroundcolor text-white mt-20">
    <table class="table-auto w-full">
        <thead>
            <tr>
                <th class="px-4 py-2">Nom</th>
                <th class="px-4 py-2">Début</th>
                <th class="px-4 py-2">Fin</th>
                <th class="px-4 py-2">Présentation</th>
            </tr>
        </thead>
        <tbody>
            {% for exhibition in exhibitions %}
            <tr class="bg-gray-700 ">
                <td class="border px-4 py-2">{{ exhibition.name }}</td>
                <td class="text-center border px-4 py-2">{{ exhibition.start|date('d/m/Y') }}</td>
                <td class="text-center border px-4 py-2">{{ exhibition.end|date('d/m/Y') }}</td>
                <td class="flex justify-center items-center border px-4 py-2">
                    <a href="{{ path('admin_exhibition_showlist', {id: exhibition.id}) }}" class="text-accentcolor">Voir</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

