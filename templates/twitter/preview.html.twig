{% extends 'base.html.twig' %}

{% block title %}Prévisualisation du Tweet{% endblock %}

{% block body %}
    <h1 class="text-white text-2xl font-bold mb-6">Prévisualisation du Tweet</h1>

    <form method="POST" action="{{ path('twitter_hashtag', {id: picture.id}) }}" class="bg-white text-black p-6 rounded shadow-md">
        <label for="hashtags" class="block mb-2 font-semibold text-gray-700">Hashtags :</label>
        <textarea id="hashtags" name="hashtags" class="w-full px-3 py-2 border rounded text-gray-700 focus:outline-none focus:shadow-outline">{{ hashtags }}</textarea>
        <input type="submit" value="Tweeter" class="mt-6 bg-accentcolor text-white px-4 py-2 rounded hover:bg-accentcolor cursor-pointer">
    </form>

{% endblock %}
