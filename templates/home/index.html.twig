{% extends 'base.html.twig' %}

{% block title %}IREP{% endblock %}

{% block body %}

<div id="default-carousel" class="relative w-full h-[40rem]" data-carousel="slide">
    <!-- Carousel wrapper -->
    <div class="relative overflow-hidden h-[40rem]">
        <!-- Items-->
        {% for exhibition in exhibitions %} 
        <div class="hidden duration-1000 ease-in-out" data-carousel-item>
            <img src="{{ asset (exhibition.image) }}"
                class="absolute block object-cover w-full h-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
                alt="...">
            <div class="absolute flex flex-col content-around top-1/2 -translate-y-1/2 ml-5 w-60 md:w-6/12">
                <h2 class="text-3xl p-2 font-bold md:text-4xl text-white ">{{ exhibition.title }}</h2>
                <h3 class="text-2xl p-2 text-white">{{ exhibition.subtitle }}</h3>
            </div>
            <div class="absolute flex justify-start top-3/4 -translate-y-1/2 ml-7 mt-2 md:w-80">
                <p class="p-3 text-white md:font-bold md:text-1xl md:p-4 bg-yellow-200">DECOUVRIR</p>
                <p class="p-3 text-white md:font-bold md:text-1xl md:p-4 bg-yellow-300"><a href="#">+</a></p>
            </div>
        </div>
        {% endfor %}     
    </div>

        <!-- Slider indicators -->
        <div class="absolute z-30 flex space-x-3 -translate-x-1/2 bottom-10 left-1/2">
            <button type="button" class="w-3 h-3 rounded-full" aria-current="true" aria-label="Slide 1"
                data-carousel-slide-to="0"></button>
            <button type="button" class="w-3 h-3 rounded-full" aria-current="false" aria-label="Slide 2"
                data-carousel-slide-to="1"></button>
            <button type="button" class="w-3 h-3 rounded-full" aria-current="false" aria-label="Slide 3"
                data-carousel-slide-to="2"></button>
                <button type="button" class="w-3 h-3 rounded-full" aria-current="false" aria-label="Slide 4"
                data-carousel-slide-to="3"></button>
        </div>
</div>    

<div class="h-96"></div>

{% endblock %}
